{
  "name": "MySQL Dev Container",
  "services": {
    "mysql": {
      "image": "mysql:8.0",
      "restart": "always",
      "env": {
        "MYSQL_ROOT_PASSWORD": "root",
        "MYSQL_DATABASE": "devdb",
        "MYSQL_USER": "devuser",
        "MYSQL_PASSWORD": "devpass"
      },
      "ports": ["3306:3306"]
    }
  },
  "forwardPorts": [3306],
  "remoteUser": "vscode",
  "postCreateCommand": "mysql --version"
}
